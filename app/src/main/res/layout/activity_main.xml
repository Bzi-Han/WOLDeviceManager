<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bottomBar" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/menu_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@drawable/drawable_menu_bottombar_item_color"
        app:itemTextColor="@drawable/drawable_menu_bottombar_item_color"
        app:menu="@menu/menu_bottombar" />
</RelativeLayout>